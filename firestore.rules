rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Forms collection rules
    match /forms/{formId} {
      // Anyone can read published forms
      allow read: if resource.data.status == 'published' || isOwner(resource.data.createdBy);

      // Only authenticated users can create forms
      allow create: if isAuthenticated() && request.resource.data.createdBy == request.auth.uid;

      // Only form creator can update or delete
      allow update, delete: if isOwner(resource.data.createdBy);
    }

    // Responses collection rules
    match /responses/{responseId} {
      // Users can create responses for published forms
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Only form creators can read responses to their forms
      allow read: if isAuthenticated() &&
                     get(/databases/$(database)/documents/forms/$(resource.data.formId)).data.createdBy == request.auth.uid;

      // No one can update or delete responses
      allow update, delete: if false;
    }
  }
}
